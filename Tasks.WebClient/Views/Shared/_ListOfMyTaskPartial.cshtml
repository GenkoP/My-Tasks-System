@using Tasks.WebClient.Models.ViewModels

@model IQueryable<MyTaskViewModel>

@if (Model.Count() == 0)
{
    <div class="starting-page">
        <div class="not-have-tasks">
            <h2>You have no tasks today!</h2>
        </div>
        <div class="row start-btns-home">
            <p class="col-md-2">
                @Html.ActionLink("Add new task", "Create", "Tasks", null, new { @class = "btn btn-primary" })
            </p>
            <p class="col-md-1">
                @Html.ActionLink("Go to tasks", "Index", "Tasks", null, new { @class = "btn btn-primary" })
            </p>
        </div>  
    </div>

}
else
{
    foreach (var task in Model)
    {
        @Html.Partial("_MyTaskPartial", task)
    }
}