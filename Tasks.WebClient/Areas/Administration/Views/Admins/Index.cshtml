@using Tasks.WebClient.Areas.Administration.Views.Admins
@using GridMvc.Html

@model IList<UserViewModel>

@{
    ViewBag.Title = "Index";
}

@for (int i = 0; i < Model.ToList().Count; i++)
{

    <div class="row" >

        <div class="col-md-1">
            @(i + 1)
        </div>
        <div class="col-md-3">
            @Model[i].Id
        </div>
        <div class="col-md-3">
            @Model[i].Email
        </div>
        <div class="col-md-3">
            @using (Html.BeginForm("DelteUser", "Admins", new { area = "Administration" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model[i].Id)

                <input class="btn btn-primary" type="submit"  value="Delete" />
            }
        </div>

    </div>


}


